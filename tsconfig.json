{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "es2015",
    "lib": ["dom", "es6"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-native",
    "sourceMap": true,
    "rootDir": "./src/",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/actions*": ["app/actions*"],
      "@/components*": ["app/components*"],
      "@/config*": ["app/config*"],
      "@/lib*": ["app/lib*"],
      "@/reducers*": ["app/reducers*"],
      "@/routes*": ["app/routes*"]
    },
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*",
    "./App.ts",
    "./types/**/*"
  ]
}